<addon id="plugin.program.blackjohnnywizard" version="1.0.0" name="BlackJohnny Repository" provider-name="blackj48">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <extension point="xbmc.addon.repository" library="default.py">
    <info compressed="true">addons.xml</info>
    <checksum>addons.xml.md5</checksum>
    <datadir zip="true">.</datadir>
  </extension>

  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
    <license>LICENSE.txt</license>
  </assets>

  <extension point="xbmc.addon.metadata">
    <summary>Repository for BlackJohnny builds and addons</summary>
    <description>Provides BlackJohnny wizard and builds</description>
    <platform>all</platform>
  </extension>
</addon>
